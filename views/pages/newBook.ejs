<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include('../partials/head.ejs') %>
  <body>
    <!-- Header -->
    <%- include('../partials/header.ejs') %>

    <!-- Sidebar -->
    <%- include('../partials/sidebar.ejs') %>

    <main class="main">
      <h2 class="sub-title">Add a Book</h2>

      <!-- Show validation errors -->
      <%- include("../partials/errors.ejs") %>

      <!-- New book form -->
      <form action="/books/new" method="post" class="form">
        <label for="title"> Title </label>
        <input type="text" name="title" id="title" required />
        <label for="summary"> Summary </label>
        <textarea name="summary" id="summary"></textarea>
        <label for="isbn"> ISBN number </label>
        <input type="text" name="isbn" id="isbn" required />
        <label for="author"> Author </label>
        <input type="text" name="author" id="author" required />
        <label for="genre"> Genre </label>
        <input type="text" name="genre" id="genre" required />
        <label for="publisher"> Publisher </label>
        <input type="text" name="publisher" id="publisher" required />
        <label for="format"> Format </label>
        <input type="text" name="format" id="format" required />
        <label for="total-pages"> Total Pages </label>
        <input type="number" name="totalPages" id="total-pages" required />
        <label for="price"> Price </label>
        <span>$</span>
        <input type="text" name="price" id="price" inputmode="decimal" placeholder="0.00" required />
        <label for="stock">Stock</label>
        <input type="number" name="stock" id="stock" min="0" required>
        <label for="publish-date">Publish date</label>
        <input type="date" name="publishDate" id="publish-date" required>
        <label for="edition">Edition</label>
        <input type="text" name="edition" id="edition">
        <button>Add</button>
      </form>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
