<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include('../../partials/head.ejs') %>
  <body>
    <!-- Header -->
    <%- include('../../partials/header.ejs') %>

    <!-- Sidebar -->
    <%- include('../../partials/sidebar.ejs') %>

    <!-- Main content-->
    <main class="main">
      <div class="category">
        <div class="category__controls">
          <h2 class="sub-title"><a href="/publishers" class="link--sub-title">Publishers</a></h2>
         
          <!-- Publisher subheader -->
          <div class="category__actions">
            <!-- Search publisher -->
            <form class="category__form" action="/publishers/search" method="get">
              <label class="visually-hidden" for="search">
                Search for Publisher
              </label>
              <input class="category__search" type="text" name="query" id="search"
               value="<%= locals.search ? search : '' %>"
               placeholder="Search for publisher..." required>
              <!-- Search button -->
              <button class="btn btn--search" type="submit"
              aria-label="Search for publisher" title="Search">
                <img src="/icons/icon-search-1.svg" alt="" width="25" height="25" />
              </button>
            </form>

            <!-- Add publisher -->
            <a class="link--add link" href="/publishers/new">
              <img src="/icons/icon-plus.svg" alt="" width="25" height="25" />Add Publisher</a>
          </div>
        </div>

         <!-- Show validation errors -->
        <%  if(locals.errors) {%>
          <%- include("../../partials/errors.ejs") %>
        <% } %> 
        
        <div class="gallery">
          <% if (locals.filteredPublishers) { %>
            <h3>Search Results</h3>
            <% if(filteredPublishers.length > 0) { %>
              <!-- Show search results -->
              <ul class="gallery__list">
                <% filteredPublishers.forEach(publisher => { %>
                  <!-- Publisher -->
                  <li class="card card--small">
                    <div class="genre__image img-container"></div>
                    <div class="publisher__info">
                      <h4><%= publisher.name %></h4>
                      <p><%= publisher.email %></p>
                    </div>
                  </li>
                <% }) %>
              </ul>
              <a class="link link--back" href="/publishers">
                <img src="/icons/icon-back.svg" alt="" width="25" height="25" />
                Back to Publishers</a>
            <% } else { %>
              <div class="status">
                <p>Publisher not found</p>
              </div>
            <% } %>
          <% } else if (locals.publishers) { %>
            <h3>All Publishers List</h3>
            <% if ( publishers.length > 0) { %>
            <!-- Show all publishers -->
              <ul class="gallery__list">
                <% publishers.forEach(publisher => { %>
                  <!-- Publisher -->
                  <li class="card card--small">
                    <div class="genre__image img-container"></div>
                    <div class="publisher__info">
                      <h4><%= publisher.name %></h4>
                      <p><%= publisher.email %></p>
                    </div>

                    <div class="btn-group">
                      <!-- Update publisher -->
                      <a class="link link--update"  href="/publishers/<%= publisher.id %>/update">
                        <img src="/icons/icon-update.svg" alt="" width="25" height="25" />Update</a>

                      <!-- Delete publisher -->
                      <form action="/publishers/<%= publisher.id %>/delete" method="POST" >
                        <button class="btn btn--primary btn--delete"  type="submit" onclick="return confirm('Warning: This will delete ALL data for this publisher!');">
                          <img src="/icons/icon-delete.svg" alt="" width="25" height="25" />
                          Delete</button>
                      </form>
                    </div>
                  </li>
                <% }) %>
              </ul>
            <% } else { %>
              <div class="status">
                <p>Start by adding some publishers</p>
              </div>
            <% } %>
          <% } %>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <%- include('../../partials/footer.ejs') %>
  </body>
</html>
